{% extends 'base.html.twig' %}
{% block title %}Episode
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Episode</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Série</th>
					<td>{{ episode.season.program.title }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ episode.title }}</td>
				</tr>
				<tr>
					<th>Saison</th>
					<td>S{{ "%02d"|format(episode.season.number) }}</td>
				</tr>
				<tr>
					<th>Episode</th>
					<td>E{{ "%02d"|format(episode.number) }}</td>
				</tr>
				<tr>
					<th>Synopsis</th>
					<td>{{ episode.synopsis }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_episode_index') }}" class="btn btn-primary btn-sm">Retour à la liste</a>

		<a href="{{ path('app_episode_edit', {'id': episode.id}) }}" class="btn btn-primary btn-sm">Editer</a>

		{{ include('episode/_delete_form.html.twig') }}
	</div>
{% endblock %}
