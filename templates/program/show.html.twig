{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="media">
			<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
			<div class="media-body">
				<h1 class="mt-0">{{ program.title }}</h1>
				<p>{{ program.synopsis }}</p>
				{% if program.seasons|length > 0 %}
					<p>Saisons disponibles:</p>
					<ul>
						{% for season in program.seasons %}
							<li>Saison
								<a href="{{ path('season_show', { programId: program.id, seasonId: season.id }) }}">
									{{ season.number }}
								</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
				<p>Catégorie :
					<a href="{{ path('category_show', { categoryName: program.category.name }) }}">{{ program.category.name }}</a>
				</p>
			</div>
		</div>
		<a href="{{ path('program_index') }}">
			Retour à la liste des programmes
		</a>
	</div>
{% endblock %}
