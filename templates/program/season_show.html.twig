{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.number }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{season.program.title }}
			- Saison
			{{ season.number }}</h1>
		<p>Année
			{{ season.year}}</p>
		<p>{{ season.description}}</p>
		{% if season.episodes|length > 0%}
			<p>Episodes disponibles:</p>
			<ul>
				{% for episode in season.episodes %}
					<li>Episode
						{{ episode.number }}
						-
						{{ episode.title }}
						-
						{{ episode.synopsis }}
					</li>
				{% endfor %}
			</ul>
		{% endif %}
		<a href="{{ path('program_show', { id: season.program.id }) }}">
			Retour à la liste des saisons
		</a>
	</div>
{% endblock %}
