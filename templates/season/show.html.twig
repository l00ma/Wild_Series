{% extends 'base.html.twig' %}
{% block title %}Saison
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Saison</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Série</th>
					<td>{{ season.program.title }}</td>
				</tr>
				<tr>
					<th>Saison N°</th>
					<td>{{ season.number }}</td>
				</tr>
				<tr>
					<th>Année</th>
					<td>{{ season.year }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ season.description }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('season_index') }}" class="btn btn-primary btn-sm">Retour à la liste</a>

		<a href="{{ path('season_edit', {'id': season.id}) }}" class="btn btn-primary btn-sm">Editer</a>

		{{ include('season/_delete_form.html.twig') }}
	</div>
{% endblock %}
